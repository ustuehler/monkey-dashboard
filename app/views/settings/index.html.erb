<h1>Listing settings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.value %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_setting_path(setting), :class => 'btn btn-primary' %>
          <%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path, :class => 'btn btn-default btn-primary' %>
